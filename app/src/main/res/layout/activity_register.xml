<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.inclass09_group05.RegisterActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextFirstName"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:backgroundTint="@android:color/holo_blue_bright"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextLastName"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginLeft="42dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextRegUserName"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastName" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Choose Password"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextRegPwd1"
        android:inputType="textPassword"
        android:layout_marginTop="23dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegUserName" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Repeat Password"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextRegPwd2"
        android:inputType="textPassword"
        android:layout_marginTop="23dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegPwd1" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:layout_marginLeft="203dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegPwd2" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textStyle="bold"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegPwd2" />


</android.support.constraint.ConstraintLayout>
